{
  "compilerOptions": {
    "rootDir": "src",
    "target": "es6",
    "module": "commonjs",
    "typeRoots": ["../../node_modules/@types", "./packages/**/src/@types"],
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "jsx": "react"
  },
  "types": ["chrome"],
  "exclude": ["react", "../../node_modules"]
}
